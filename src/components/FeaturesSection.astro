---
// Features section component for LuxCoin
---

<section class="py-32 bg-stone-800 bg-opacity-80">
  <div class="max-w-5xl mx-auto px-4">
    <div class="grid md:grid-cols-3 gap-8">
      <div class="relative group">
        <!-- Staggered background card (shadow effect) -->
        <div class="absolute size-full left-4 top-4 group-hover:top-3 group-hover:left-3 transition-all bg-stone-900 rounded-sm"></div>
        <div class="relative h-full bg-stone-700 bg-opacity-70 p-8 rounded-sm text-center z-10">
          <h3 class="text-xl uppercase text-stone-100 mb-4">Lecita Provenienza</h3>
          <p class="text-stone-300">Ogni moneta possiede un certificato autentico</p>
          <div class="mt-6 flex justify-center">
            <img src="/images/certified.png" alt="Certified" class="w-32 h-32 object-contain" />
          </div>
        </div>
      </div>
      <div class="relative group">
        <!-- Staggered background card (shadow effect) -->
        <div class="absolute size-full left-4 top-4 group-hover:top-3 group-hover:left-3 transition-all bg-stone-900 rounded-sm"></div>
        <div class="relative flex flex-col items-center h-full bg-stone-700 bg-opacity-70 p-8 rounded-sm text-center z-10">
          <h3 class="text-xl uppercase text-stone-100 mb-4">Spedizione Gratuita</h3>
          <p class="text-stone-300">Su tutti gli ordini superiori a 50€</p>
          <div class="mt-auto">
            <img src="/images/shipping.png" alt="Free Shipping" class="w-32 h-32 object-contain" />
          </div>
        </div>
      </div>
      <div class="relative group">
        <!-- Staggered background card (shadow effect) -->
        <div class="absolute size-full left-4 top-4 group-hover:top-3 group-hover:left-3 transition-all bg-stone-900 rounded-sm"></div>
        <div class="relative h-full bg-stone-700 bg-opacity-70 p-8 rounded-sm text-center z-10">
          <h3 class="text-xl uppercase text-stone-100 mb-4">Garanzia di Autenticità</h3>
          <p class="text-stone-300">Ogni moneta è verificata da esperti numismatici</p>
          <div class="mt-6 flex justify-center">
            <img src="/images/authentic.png" alt="Authentic" class="w-32 h-32 object-contain" />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
