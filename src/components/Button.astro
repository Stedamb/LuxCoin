---
// Click button to enhance the Roman coin display!
// Styled by Tailwind :)
---

<button
	id="spin-button"
	class="appearance-none py-2 px-4 bg-amber-600 text-white font-semibold rounded-lg shadow-md hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-amber-400 focus:ring-opacity-75"
>
	<slot />
</button>

<script>
	import confetti from 'canvas-confetti';
	const button = document.getElementById('spin-button');

	if (button) {
		button.addEventListener('click', () => {
			// Trigger gold-colored confetti
			confetti({
				particleCount: 100,
				spread: 70,
				origin: { y: 0.6 },
				colors: ['#f59e0b', '#d97706', '#b45309', '#92400e']
			});
			
			// Create a custom event to communicate with the Three.js scene
			const event = new CustomEvent('boost-cube-spin');
			document.dispatchEvent(event);
		});
	}
</script>
