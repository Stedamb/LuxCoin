---
// Navigation component for LuxCoin
---

<nav class="py-8 absolute top-0 left-0 right-0 z-50">
  <div class="container mx-auto px-4">
    <div class="relative flex justify-between items-center">
      <div class="flex space-x-8 items-center">
        <div class="hidden md:flex space-x-6">
          <a href="/shop" class="text-stone-200 hover:text-stone-100 transition-colors text-xl">La collezione</a>
          <a href="/about" class="text-stone-200 hover:text-stone-100 transition-colors text-xl">Chi siamo</a>
          <a href="/contact" class="text-stone-200 hover:text-stone-100 transition-colors text-xl">Contatti</a>
        </div>
      </div>

      <a href="/" class="absolute bottom-0 left-1/2 -translate-x-1/2 text-stone-200 font-serif text-4xl">LuxCoin</a>

      <div class="hidden md:flex items-center space-x-4">
        <a href="/cart" class="text-stone-200 hover:text-stone-100 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
        </a>
        <a href="/account" class="text-stone-200 hover:text-stone-100 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </a>
      </div>
      
      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button id="mobile-menu-button" class="text-stone-200 hover:text-stone-100">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 space-y-4">
      <a href="/shop" class="block text-stone-200 hover:text-stone-100 transition-colors font-serif">Shop</a>
      <a href="/about" class="block text-stone-200 hover:text-stone-100 transition-colors font-serif">Chi siamo</a>
      <a href="/contact" class="block text-stone-200 hover:text-stone-100 transition-colors font-serif">Contatti</a>
      <div class="flex space-x-4 mt-4">
        <a href="/cart" class="text-stone-200 hover:text-stone-100 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
        </a>
        <a href="/account" class="text-stone-200 hover:text-stone-100 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>
