---
import MainLayout from '../layouts/main.astro';
import { CoinCard } from '../components/CoinCard';
import { coins } from '../data/coins';
---

<MainLayout title="Collezione - LuxCoin">
	<!-- Collection Header -->
	<section class="py-16">
		<div class="container mx-auto px-4">
			<h1 class="font-serif text-4xl md:text-5xl font-bold text-stone-100 text-center mb-8">La Nostra Collezione</h1>
			<p class="text-xl text-center max-w-3xl mx-auto text-stone-300 mb-12">
				Esplora la nostra selezione di monete romane autentiche, ciascuna con la propria storia millenaria e certificato di autenticità.
			</p>
			
			<!-- Filters -->
			<div class="bg-stone-800 bg-opacity-70 p-6 rounded-sm mb-12">
				<div class="grid md:grid-cols-4 gap-4">
					<div>
						<label class="block text-stone-400 mb-2 text-sm">Periodo</label>
						<select class="w-full bg-stone-700 border border-stone-600 text-stone-200 rounded-sm px-3 py-2">
							<option>Tutti i periodi</option>
							<option>Repubblica Romana</option>
							<option>Impero Romano</option>
							<option>Periodo Bizantino</option>
						</select>
					</div>
					<div>
						<label class="block text-stone-400 mb-2 text-sm">Imperatore</label>
						<select class="w-full bg-stone-700 border border-stone-600 text-stone-200 rounded-sm px-3 py-2">
							<option>Tutti gli imperatori</option>
							<option>Augusto</option>
							<option>Nerone</option>
							<option>Adriano</option>
							<option>Marco Aurelio</option>
						</select>
					</div>
					<div>
						<label class="block text-stone-400 mb-2 text-sm">Metallo</label>
						<select class="w-full bg-stone-700 border border-stone-600 text-stone-200 rounded-sm px-3 py-2">
							<option>Tutti i metalli</option>
							<option>Oro</option>
							<option>Argento</option>
							<option>Bronzo</option>
						</select>
					</div>
					<div>
						<label class="block text-stone-400 mb-2 text-sm">Prezzo</label>
						<select class="w-full bg-stone-700 border border-stone-600 text-stone-200 rounded-sm px-3 py-2">
							<option>Qualsiasi prezzo</option>
							<option>Fino a 1000€</option>
							<option>1000€ - 2000€</option>
							<option>2000€ - 5000€</option>
							<option>Oltre 5000€</option>
						</select>
					</div>
				</div>
			</div>
			
			<!-- Coins Grid -->
			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
				{coins.map(coin => (
					<CoinCard coin={coin} client:load />
				))}
			</div>
		</div>
	</section>
</MainLayout>
