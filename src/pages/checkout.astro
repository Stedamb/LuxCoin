---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

// In a real application, cart data would come from a database or client-side storage
// This is just a sample for demonstration
const cartItems = [
  {
    id: 1,
    name: "Aureo di Adriano",
    period: "117-138 d.C.",
    price: 2800,
    image: "/images/coins/adriano.jpg",
    quantity: 1
  },
  {
    id: 4,
    name: "Aureo di Marco Aurelio",
    period: "161-180 d.C.",
    price: 3500,
    image: "/images/coins/marco_aurelio.jpg",
    quantity: 1
  }
];

// Calculate totals
const subtotal = cartItems.reduce((sum, item) => sum + (item.price * item.quantity), 0);
const shipping = 25; // Fixed shipping cost
const total = subtotal + shipping;
---

<html lang="it">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Checkout - LuxCoin</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&family=Cormorant+Garamond:wght@400;500;600&display=swap" rel="stylesheet">
	</head>

	<body class="bg-stone-900 text-stone-200 font-serif">
		<div class="relative">
			<!-- Background image with overlay -->
			<div class="absolute inset-0 bg-cover bg-center z-0" style="background-image: url('/images/mosaic-bg.jpg'); filter: brightness(0.4);"></div>
			
			<!-- Content -->
			<div class="relative z-10">
				<!-- Navigation -->
				<Navbar />
				
				<!-- Checkout Section -->
				<section class="py-16">
					<div class="container mx-auto px-4">
						<h1 class="font-cinzel text-3xl md:text-4xl font-bold text-amber-300 mb-8 text-center">Checkout</h1>
						
						<div class="grid md:grid-cols-3 gap-8">
							<!-- Checkout Form -->
							<div class="md:col-span-2">
								<div class="bg-stone-800 bg-opacity-70 rounded-sm overflow-hidden">
									<div class="p-6">
										<h2 class="font-cinzel text-xl text-amber-300 mb-6">Informazioni di spedizione</h2>
										
										<form class="space-y-6">
											<div class="grid md:grid-cols-2 gap-6">
												<div>
													<label for="firstName" class="block text-stone-300 mb-2">Nome</label>
													<input 
														type="text" 
														id="firstName" 
														class="w-full bg-stone-700 border border-stone-600 rounded-sm px-4 py-2 text-stone-200 focus:border-amber-500 focus:outline-none"
													/>
												</div>
												<div>
													<label for="lastName" class="block text-stone-300 mb-2">Cognome</label>
													<input 
														type="text" 
														id="lastName" 
														class="w-full bg-stone-700 border border-stone-600 rounded-sm px-4 py-2 text-stone-200 focus:border-amber-500 focus:outline-none"
													/>
												</div>
											</div>
											
											<div>
												<label for="email" class="block text-stone-300 mb-2">Email</label>
												<input 
													type="email" 
													id="email" 
													class="w-full bg-stone-700 border border-stone-600 rounded-sm px-4 py-2 text-stone-200 focus:border-amber-500 focus:outline-none"
												/>
											</div>
											
											<div>
												<label for="address" class="block text-stone-300 mb-2">Indirizzo</label>
												<input 
													type="text" 
													id="address" 
													class="w-full bg-stone-700 border border-stone-600 rounded-sm px-4 py-2 text-stone-200 focus:border-amber-500 focus:outline-none"
												/>
											</div>
											
											<div class="grid md:grid-cols-3 gap-6">
												<div>
													<label for="city" class="block text-stone-300 mb-2">Città</label>
													<input 
														type="text" 
														id="city" 
														class="w-full bg-stone-700 border border-stone-600 rounded-sm px-4 py-2 text-stone-200 focus:border-amber-500 focus:outline-none"
													/>
												</div>
												<div>
													<label for="postalCode" class="block text-stone-300 mb-2">CAP</label>
													<input 
														type="text" 
														id="postalCode" 
														class="w-full bg-stone-700 border border-stone-600 rounded-sm px-4 py-2 text-stone-200 focus:border-amber-500 focus:outline-none"
													/>
												</div>
												<div>
													<label for="country" class="block text-stone-300 mb-2">Paese</label>
													<select 
														id="country" 
														class="w-full bg-stone-700 border border-stone-600 rounded-sm px-4 py-2 text-stone-200 focus:border-amber-500 focus:outline-none"
													>
														<option value="IT">Italia</option>
														<option value="FR">Francia</option>
														<option value="DE">Germania</option>
														<option value="UK">Regno Unito</option>
														<option value="ES">Spagna</option>
														<option value="US">Stati Uniti</option>
													</select>
												</div>
											</div>
											
											<div>
												<label for="phone" class="block text-stone-300 mb-2">Telefono</label>
												<input 
													type="tel" 
													id="phone" 
													class="w-full bg-stone-700 border border-stone-600 rounded-sm px-4 py-2 text-stone-200 focus:border-amber-500 focus:outline-none"
												/>
											</div>
										</form>
										
										<div class="border-t border-stone-700 my-8"></div>
										
										<h2 class="font-cinzel text-xl text-amber-300 mb-6">Metodo di pagamento</h2>
										
										<form class="space-y-6">
											<div>
												<label for="cardName" class="block text-stone-300 mb-2">Nome sulla carta</label>
												<input 
													type="text" 
													id="cardName" 
													class="w-full bg-stone-700 border border-stone-600 rounded-sm px-4 py-2 text-stone-200 focus:border-amber-500 focus:outline-none"
												/>
											</div>
											
											<div>
												<label for="cardNumber" class="block text-stone-300 mb-2">Numero carta</label>
												<input 
													type="text" 
													id="cardNumber" 
													placeholder="XXXX XXXX XXXX XXXX"
													class="w-full bg-stone-700 border border-stone-600 rounded-sm px-4 py-2 text-stone-200 focus:border-amber-500 focus:outline-none"
												/>
											</div>
											
											<div class="grid md:grid-cols-2 gap-6">
												<div>
													<label for="expDate" class="block text-stone-300 mb-2">Data di scadenza</label>
													<input 
														type="text" 
														id="expDate" 
														placeholder="MM/AA"
														class="w-full bg-stone-700 border border-stone-600 rounded-sm px-4 py-2 text-stone-200 focus:border-amber-500 focus:outline-none"
													/>
												</div>
												<div>
													<label for="cvv" class="block text-stone-300 mb-2">CVV</label>
													<input 
														type="text" 
														id="cvv" 
														placeholder="123"
														class="w-full bg-stone-700 border border-stone-600 rounded-sm px-4 py-2 text-stone-200 focus:border-amber-500 focus:outline-none"
													/>
												</div>
											</div>
										</form>
									</div>
								</div>
							</div>
							
							<!-- Order Summary -->
							<div>
								<div class="bg-stone-800 bg-opacity-70 rounded-sm overflow-hidden sticky top-4">
									<div class="p-6">
										<h2 class="font-cinzel text-xl text-amber-300 mb-4">Riepilogo ordine</h2>
										
										<div class="divide-y divide-stone-700 mb-6">
											{cartItems.map(item => (
												<div class="py-4 flex items-center">
													<div class="w-16 h-16 flex-shrink-0 bg-stone-700 rounded-sm overflow-hidden mr-4">
														<img 
															src={item.image} 
															alt={item.name} 
															class="w-full h-full object-cover"
														/>
													</div>
													<div class="flex-grow">
														<h3 class="font-cinzel text-amber-300 text-sm">{item.name}</h3>
														<p class="text-stone-400 text-xs">{item.period}</p>
													</div>
													<div class="text-right">
														<p class="font-cinzel text-amber-300">{item.price.toLocaleString()}€</p>
														<p class="text-stone-400 text-xs">Qtà: {item.quantity}</p>
													</div>
												</div>
											))}
										</div>
										
										<div class="space-y-3 mb-6">
											<div class="flex justify-between">
												<span class="text-stone-400">Subtotale</span>
												<span class="font-cinzel">{subtotal.toLocaleString()}€</span>
											</div>
											<div class="flex justify-between">
												<span class="text-stone-400">Spedizione</span>
												<span class="font-cinzel">{shipping.toLocaleString()}€</span>
											</div>
											<div class="border-t border-stone-700 pt-3 flex justify-between">
												<span class="font-cinzel text-amber-300">Totale</span>
												<span class="font-cinzel text-amber-300">{total.toLocaleString()}€</span>
											</div>
										</div>
										
										<button class="bg-amber-800 hover:bg-amber-700 text-stone-100 px-6 py-3 rounded-sm font-cinzel uppercase tracking-wide transition-colors w-full mb-4">
											Completa l'ordine
										</button>
										
										<div class="bg-amber-900 bg-opacity-30 border border-amber-800 p-4 rounded-sm">
											<div class="flex items-start">
												<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-amber-400 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
												</svg>
												<div>
													<h3 class="font-cinzel text-amber-400 mb-1">Pagamento sicuro</h3>
													<p class="text-stone-300 text-xs">Tutte le transazioni sono protette con crittografia SSL.</p>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</section>
				
				<!-- Footer -->
				<Footer />
			</div>
		</div>
	</body>
</html>
