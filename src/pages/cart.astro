---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

// In a real application, cart data would come from a database or client-side storage
// This is just a sample for demonstration
const cartItems = [
  {
    id: 1,
    name: "Aureo di Adriano",
    period: "117-138 d.C.",
    price: 2800,
    image: "/images/coins/adriano.jpg",
    quantity: 1
  },
  {
    id: 4,
    name: "Aureo di Marco Aurelio",
    period: "161-180 d.C.",
    price: 3500,
    image: "/images/coins/marco_aurelio.jpg",
    quantity: 1
  }
];

// Calculate totals
const subtotal = cartItems.reduce((sum, item) => sum + (item.price * item.quantity), 0);
const shipping = 25; // Fixed shipping cost
const total = subtotal + shipping;
---

<html lang="it">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Carrello - LuxCoin</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&family=Cormorant+Garamond:wght@400;500;600&display=swap" rel="stylesheet">
	</head>

	<body class="bg-stone-900 text-stone-200 font-serif">
		<div class="relative">
			<!-- Background image with overlay -->
			<div class="absolute inset-0 bg-cover bg-center z-0" style="background-image: url('/images/mosaic-bg.jpg'); filter: brightness(0.4);"></div>
			
			<!-- Content -->
			<div class="relative z-10">
				<!-- Navigation -->
				<Navbar />
				
				<!-- Cart Section -->
				<section class="py-16">
					<div class="container mx-auto px-4">
						<h1 class="font-cinzel text-3xl md:text-4xl font-bold text-amber-300 mb-8 text-center">Il tuo carrello</h1>
						
						{cartItems.length === 0 ? (
							<div class="text-center py-16">
								<p class="text-xl text-stone-400 mb-6">Il tuo carrello è vuoto</p>
								<a href="/collection" class="bg-amber-800 hover:bg-amber-700 text-stone-100 px-6 py-3 rounded-sm font-cinzel uppercase tracking-wide transition-colors inline-block">
									Esplora la collezione
								</a>
							</div>
						) : (
							<div class="grid md:grid-cols-3 gap-8">
								<!-- Cart Items -->
								<div class="md:col-span-2">
									<div class="bg-stone-800 bg-opacity-70 rounded-sm overflow-hidden">
										<div class="p-6">
											<h2 class="font-cinzel text-xl text-amber-300 mb-4">Articoli nel carrello</h2>
											
											<div class="divide-y divide-stone-700">
												{cartItems.map(item => (
													<div class="py-4 flex items-center">
														<div class="w-20 h-20 flex-shrink-0 bg-stone-700 rounded-sm overflow-hidden mr-4">
															<img 
																src={item.image} 
																alt={item.name} 
																class="w-full h-full object-cover"
															/>
														</div>
														<div class="flex-grow">
															<h3 class="font-cinzel text-amber-300">{item.name}</h3>
															<p class="text-stone-400 text-sm">{item.period}</p>
														</div>
														<div class="flex items-center">
															<div class="flex items-center mr-6">
																<button class="w-8 h-8 flex items-center justify-center bg-stone-700 hover:bg-stone-600 text-stone-300 rounded-sm transition-colors">
																	-
																</button>
																<span class="mx-3">{item.quantity}</span>
																<button class="w-8 h-8 flex items-center justify-center bg-stone-700 hover:bg-stone-600 text-stone-300 rounded-sm transition-colors">
																	+
																</button>
															</div>
															<div class="text-right">
																<p class="font-cinzel text-amber-300">{item.price.toLocaleString()}€</p>
																<button class="text-stone-400 hover:text-stone-300 text-sm mt-1">
																	Rimuovi
																</button>
															</div>
														</div>
													</div>
												))}
											</div>
											
											<div class="mt-6 flex justify-between">
												<a href="/collection" class="text-amber-400 hover:text-amber-300 transition-colors flex items-center">
													<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
														<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
													</svg>
													Continua lo shopping
												</a>
												<button class="text-stone-400 hover:text-stone-300 transition-colors">
													Svuota carrello
												</button>
											</div>
										</div>
									</div>
								</div>
								
								<!-- Order Summary -->
								<div>
									<div class="bg-stone-800 bg-opacity-70 rounded-sm overflow-hidden sticky top-4">
										<div class="p-6">
											<h2 class="font-cinzel text-xl text-amber-300 mb-4">Riepilogo ordine</h2>
											
											<div class="space-y-3 mb-6">
												<div class="flex justify-between">
													<span class="text-stone-400">Subtotale</span>
													<span class="font-cinzel">{subtotal.toLocaleString()}€</span>
												</div>
												<div class="flex justify-between">
													<span class="text-stone-400">Spedizione</span>
													<span class="font-cinzel">{shipping.toLocaleString()}€</span>
												</div>
												<div class="border-t border-stone-700 pt-3 flex justify-between">
													<span class="font-cinzel text-amber-300">Totale</span>
													<span class="font-cinzel text-amber-300">{total.toLocaleString()}€</span>
												</div>
											</div>
											
											<button class="bg-amber-800 hover:bg-amber-700 text-stone-100 px-6 py-3 rounded-sm font-cinzel uppercase tracking-wide transition-colors w-full mb-4">
												Procedi al checkout
											</button>
											
											<div class="bg-amber-900 bg-opacity-30 border border-amber-800 p-4 rounded-sm">
												<div class="flex items-start">
													<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-amber-400 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
														<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
													</svg>
													<div>
														<h3 class="font-cinzel text-amber-400 mb-1">Pagamento sicuro</h3>
														<p class="text-stone-300 text-sm">Tutte le transazioni sono protette con crittografia SSL.</p>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						)}
					</div>
				</section>
				
				<!-- Footer -->
				<Footer />
			</div>
		</div>
	</body>
</html>
